<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', books: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% if @book.user == current_user %>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image', size: "80x80" %>
                <% end %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to user_path(user) do %>
                 Show
                <% end %>
              </td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>