<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', books: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image, size: "100x100" %><br><%= @user.name %>
                <% else %>
                  <%= image_tag 'no_image', size: "100x100" %><br><%= @user.name %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>