
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= form_with model: Book.new do |f| %>

      <h2>User info</h2>

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
         <%= image_tag 'no_image', size: "100x100" %>
      <% end %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>
              <%= @user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <%= @user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user) do %>
       　 <i class="fa-solid fa-user-gear"></i>
      　<% end %>
      </div>

      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Opinion</h5>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
    </div>


  </div>
</div>
