
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= form_with model: Book.new do |f| %>

      <h2>User info</h2>

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
         <%= image_tag 'no_image', size: "100x100" %>
      <% end %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>
              <%= @user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <%= @user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(@user) do %>
         　 <i class="fa-solid fa-user-gear"></i>
        　<% end %>
      　</div>
      </div>

      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Opinion</h5>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>

          <tr>
            <tb>
              <%= link_to user_path(book.id) do %>
                <%= image_tag book.get_image %>
              <% end %>
            </tb>
            <tb>
              <%= book.title %>
            </tb>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
